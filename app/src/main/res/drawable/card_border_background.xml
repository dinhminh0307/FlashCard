<!-- res/drawable/border_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5D3A8D" /> <!-- Purple background color -->
            <stroke
                android:width="4dp"
                android:color="#FFFFFF" /> <!-- White border color and thickness -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Inner Content Background -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#5D3A8D" /> <!-- Inner purple background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
