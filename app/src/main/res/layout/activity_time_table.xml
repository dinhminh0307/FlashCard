<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="no"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controller.TimeTableActivity">

    <!-- Container for all views inside the ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Horizontal LinearLayout containing ImageView and TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Exit ImageView -->
            <ImageView
                android:id="@+id/exitButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back" />

            <!-- Space between ImageView and TextView -->
            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- Title TextView -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Table"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- HorizontalScrollView containing the TableLayout -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:layout_marginTop="16dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:padding="16dp" />
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>
